{% comment %}
  --------------------------------------------------------------------------------
  Icons
  Renders an SVG icon based on the name passed through to the snippet.

  @param icon_name {String}

  --------------------------------------------------------------------------------
{% endcomment %}

{%- liquid
  assign icon_name = icon_name | downcase | default: ''
  assign icon_class = 'icon icon--' | append: icon_name
-%}

